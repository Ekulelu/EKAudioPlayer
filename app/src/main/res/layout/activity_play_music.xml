<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageButton
        android:id="@+id/img_btn_cover"
        android:layout_width="@dimen/cover_size"
        android:layout_height="@dimen/cover_size"
        android:layout_marginTop="@dimen/cover_margin_top"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/cover"
        android:cropToPadding="false"
        android:adjustViewBounds="false"
        android:background="@color/color_transparency"
        android:scaleType="fitCenter" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/play_bar_top_margin"

        android:background="#50000000">
        <ImageButton
            android:id="@+id/img_btn_fast_reverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_rew"
            android:background="@color/color_transparency"
            android:layout_toStartOf="@+id/img_btn_previous"
            />
        <ImageButton
            android:id="@+id/img_btn_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_previous"
            android:background="@color/color_transparency"
            android:layout_toStartOf="@+id/img_btn_play_stop"
            android:layout_marginStart="@dimen/play_bar_img_btn_horizontal_margin"
            />
        <ImageButton
            android:id="@+id/img_btn_play_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_play"
            android:background="@color/color_transparency"
            android:layout_marginStart="@dimen/play_bar_img_btn_horizontal_margin"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:id="@+id/img_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_next"
            android:background="@color/color_transparency"
            android:layout_toEndOf="@+id/img_btn_play_stop"
            android:layout_marginStart="@dimen/play_bar_img_btn_horizontal_margin"
            />
        <ImageButton
            android:id="@+id/img_btn_fast_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_ff"
            android:background="@color/color_transparency"
            android:layout_toEndOf="@+id/img_btn_next"
            android:layout_marginStart="@dimen/play_bar_img_btn_horizontal_margin"
            />
    </RelativeLayout>
</LinearLayout>