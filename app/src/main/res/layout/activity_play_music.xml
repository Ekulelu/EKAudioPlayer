<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/img_btn_back_to_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back"
                android:background="@color/color_transparency"
                android:layout_centerVertical="true"
                />
            <com.ekulelu.ekaudioplayer.common.AlwaysMarqueeTextView
                android:id="@+id/text_view_music_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/music_title_size"
                android:gravity="center_vertical"
                android:layout_toEndOf="@+id/img_btn_back_to_list"
                android:layout_alignParentEnd="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/play_view_title_margin"
                android:layout_marginEnd="@dimen/play_view_title_margin"
                android:singleLine="true"
                android:ellipsize="marquee"
                />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <ImageButton
        android:id="@+id/img_btn_cover"
        android:layout_width="@dimen/cover_size"
        android:layout_height="@dimen/cover_size"
        android:layout_marginTop="@dimen/cover_margin_top"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/cover"
        android:cropToPadding="false"
        android:adjustViewBounds="false"
        android:background="@color/color_transparency"
        android:scaleType="fitCenter" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/play_bar_top_margin"

        android:background="#50000000">
        <ImageButton
            android:id="@+id/img_btn_fast_reverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_rew"
            android:background="@color/color_transparency"
            android:layout_toStartOf="@+id/img_btn_previous"
            />
        <ImageButton
            android:id="@+id/img_btn_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_previous"
            android:background="@color/color_transparency"
            android:layout_toStartOf="@+id/img_btn_play_pause"
            android:layout_marginStart="@dimen/play_bar_img_btn_horizontal_margin"
            />
        <ImageButton
            android:id="@+id/img_btn_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_pause"
            android:background="@color/color_transparency"
            android:layout_marginStart="@dimen/play_bar_img_btn_horizontal_margin"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:id="@+id/img_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_next"
            android:background="@color/color_transparency"
            android:layout_toEndOf="@+id/img_btn_play_pause"
            android:layout_marginStart="@dimen/play_bar_img_btn_horizontal_margin"
            />
        <ImageButton
            android:id="@+id/img_btn_fast_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_ff"
            android:background="@color/color_transparency"
            android:layout_toEndOf="@+id/img_btn_next"
            android:layout_marginStart="@dimen/play_bar_img_btn_horizontal_margin"
            />
    </RelativeLayout>
</LinearLayout>